{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
      ]  // Sin la coma aqu√≠
  },
  "include": [
    "**/*.ts",
     "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
