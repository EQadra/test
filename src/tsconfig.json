{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"  // Add this line if you created the custom types here
    ],
  },
  "include": [
    "**/*.ts",
     "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
